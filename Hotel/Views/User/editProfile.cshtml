@model Hotel.Models.User

@{
    ViewBag.Title = "editProfile";
    Layout = "~/Views/Shared/template.cshtml";
}
<div class="col-lg-4 col-md-4 mb-5 ml-5 mr-5 mt-5 S-inscrire">


    <h4 class="rubrique-title">Modifier Votre Profile</h4>

    @using (Html.BeginForm("Edit", "User", FormMethod.Post))
    {
        @Html.AntiForgeryToken()



        @Html.ValidationSummary(false, "", new { @class = "text-danger" })


        @Html.TextBoxFor(model => model.id, new { style = "display: none;" })
        <div class="form-group">
            <label for="exampleInputEmail1">Nom d'utilisateur <span class="couleur-rouge">*</span></label>
            @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <div class="form-group">
            <label for="exampleInputEmail1">Adresse email <span class="couleur-rouge">*</span></label>
            @Html.EditorFor(model => model.mail, new { htmlAttributes = new { @class = "form-control", @type = "email" } })
        </div>
        
        <div class="form-group">
            <label for="exampleInputPassword1">Mot de passe <span class="couleur-rouge">*</span></label>
            @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control", @type = "password" } })
        </div>


        <center><button type="submit" class="btn-valide mb-3">Modifier</button></center>
    }
</div>