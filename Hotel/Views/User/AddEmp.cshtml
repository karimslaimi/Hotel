@model Hotel.Models.User

@{
    ViewBag.Title = "AddEmp";
    Layout = "~/Views/Shared/template.cshtml";
}



<div class="container" style="background-color:white;padding:100px;min-height:inherit;">
    @using (Html.BeginForm("AddEmp", "User", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        @Html.AntiForgeryToken()

        <div class=" ">
            <h2>Ajouter un employé</h2>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })


            <div class="form-group row">
              <label class="control-label col-md-2">Nom</label>
                <div class="col-xs-9">
                    @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                <label class="control-label col-md-2">Mail</label>
                <div class="col-xs-9">
                    @Html.EditorFor(model => model.mail, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.mail, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                <label class="control-label col-md-2">Mot de passe</label>
                <div class="col-xs-9">
                    @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                <label class="control-label col-md-2 ">Comfirmer Mot de passe</label>
                <div class="col-xs-9">
                    <input class="form-control" name="pass" type="text" />
                </div>
            </div>



            <div class="form-group">
                <div class="offset-xs-3 col-xs-9">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </div>

        </div>

    }
 
    <div>
        @Html.ActionLink("Back to List", "listEmp", "User", new { @class = "btn  btn-outline-secondary" })
    </div>

</div>



