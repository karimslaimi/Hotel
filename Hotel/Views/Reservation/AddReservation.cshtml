@model Hotel.Models.Reservation

@{
    ViewBag.Title = "AddReservation";
    Layout = "~/Views/Shared/template.cshtml";
}

@{
    List<SelectListItem> listItems = new List<SelectListItem>();
    listItems.Add(new SelectListItem
    {
        Text = "Single",
        Value = "Single"
    });
    listItems.Add(new SelectListItem
    {
        Text = "Double",
        Value = "Double",

    });
    listItems.Add(new SelectListItem
    {
        Text = "Triple",
        Value = "Triple"
    });


    List<SelectListItem> currItems = new List<SelectListItem>();

    foreach(var item in ViewBag.currency)
    {
        currItems.Add(new SelectListItem
        {
            Text = item.Value,
            Value = item.Key
        });
    }
}


<style>
    .sub-entry {
        width: 50%;
        float: left;
    }

    .button {
        text-align: center;
        padding-top: 20px;
        clear: both;
    }
</style>

@using (Html.BeginForm("AddReservation", "Reservation", FormMethod.Post, new { @class = "form-horizontal row-fluid" }))
{
    @Html.AntiForgeryToken()

        <h4>Ajouter une réservation</h4>
        <hr />
        <div class="sub-entry">
            @Html.ValidationSummary(true, "", new { @class = "alert alert-error" })
            <div class="control-group">
                <label class="control-label ">Chambre numéro </label>
                <div class="controls">
                    @Html.EditorFor(model => model.chambre, new { htmlAttributes = new { @class = "span8", min = 1, max = 26 } })
                    @Html.ValidationMessageFor(model => model.chambre, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="control-group">
                <label class="control-label ">Type chambre </label>
                <div class="controls">
                    @Html.DropDownListFor(model => model.type, listItems, "Sélectionner", new { @class = "span8" })
                    @Html.ValidationMessageFor(model => model.type, "", new { @class = "text-danger" })
                </div>
            </div>




            <div class="control-group">
                <label class="control-label ">Numéro de réçu</label>
                <div class="controls">
                    @Html.EditorFor(model => model.bons, new { htmlAttributes = new { @class = "span8" } })
                    @Html.ValidationMessageFor(model => model.bons, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="control-group">
                <label class="control-label ">Montant</label>
                <div class="controls">
                    @Html.EditorFor(model => model.montant, new { htmlAttributes = new { @class = "span8" } })
                    @Html.ValidationMessageFor(model => model.montant, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="control-group">
                <label class="control-label ">Méthode de paiement</label>

                <div class="controls">

                    @Html.RadioButtonFor(model => model.methpaie, "Espece",new { @checked = "true" }) Espece


                    @Html.RadioButtonFor(model => model.methpaie, "Espece") Chèque


                    @Html.RadioButtonFor(model => model.methpaie, "Espece") Crédit

                </div>
            </div>

            <div class="control-group">
                <label class="control-label ">Devise</label>
                <div class="controls">
                    @Html.DropDownListFor(model => model.devise,currItems, "currItems", new { @class = "span8" }) <br />
                    @Html.ValidationMessageFor(model => model.dft, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="control-group">
                <label class="control-label ">Agence </label>
                <div class="controls">
                    @Html.EditorFor(model => model.agence, new { htmlAttributes = new { @class = "span8" } })
                    @Html.ValidationMessageFor(model => model.agence, "", new { @class = "text-danger" })
                </div>
            </div>

        </div>

        <div class="sub-entry">
            <div class="control-group">
                <label class="control-label ">Date d'arrivée</label>
                <div class="controls">
                    @Html.TextBoxFor(model => model.Arrivee, new { @type = "date", @class = "span8 datepicker" })
                    @Html.ValidationMessageFor(model => model.Arrivee, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="control-group">
                <label class="control-label ">Dft</label>
                <div class="controls">
                    @Html.TextBoxFor(model => model.dft, new { @type = "date", @class = "span8 datepicker" })
                    @Html.ValidationMessageFor(model => model.dft, "", new { @class = "text-danger" })
                </div>
            </div>

        


            <div class="control-group">
                <label class="control-label ">Nationnalité</label>
                <div class="controls">
                    @Html.EditorFor(model => model.nat, new { htmlAttributes = new { @class = "span8" } })
                    @Html.ValidationMessageFor(model => model.nat, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="control-group">
                <label class="control-label ">Nombre de personne</label>
                <div class="controls">
                    @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "span8" } })
                    @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="control-group">
                <label class="control-label ">Nom Client</label>
                <div class="controls">
                    <input name="name1" type="text" class="span8" />
                </div>
            </div>

            <div class="control-group">
                <label class="control-label ">Nom Client 2</label>
                <div class="controls">
                    <input name="name2" type="text" class="span8" /> <span class="help-inline">S'il existe</span>
                </div>
            </div>

            <div class="control-group">
                <label class="control-label ">Nom Client 3</label>
                <div class="controls">
                    <input name="name3" type="text" class="span8" /><span class="help-inline">S'il existe</span>
                </div>
            </div>
            <br /><br />
        </div>

   
        <center>
            <button type="submit" class="btn btn-primary">Ajouter</button>
            <button href="@Url.Action("Reservations","Reservation")" class="btn btn-warning">Annuler</button>
        </center>

}




