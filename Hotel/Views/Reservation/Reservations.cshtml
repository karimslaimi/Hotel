@model IEnumerable<Hotel.Models.Reservation>

@{
    ViewBag.Title = "Reservations";
    Layout = "~/Views/Shared/template.cshtml";
}
@using System.Globalization;
@{
    CultureInfo french = new CultureInfo("fr-FR"); }

<style>
    .sub-entry {
        width: 50%;
        float: left;
    }

    .button {
        text-align: center;
        padding-top: 20px;
        clear: both;
    }
</style>

<h2 class="align-center">Réservations</h2>

<a href="@Url.Action("AddReservation","Reservation")" class="btn btn-primary pull-right ">Nouvelle réservation</a>

<br /><br />

<table class="datatable-1 table table-bordered table-striped  display dataTable ">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.chambre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.agence)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.type)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Arrivee)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.dft)
        </th>

        <th>Client</th>




        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.chambre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.agence)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.type)
            </td>
            <td>
                @{
                    var d = item.Arrivee.ToString("dd/MM/yyyy", french);
                }
                @Html.DisplayFor(modelItem => d)
            </td>
            <td>
                @{
                    var d1 = item.dft.ToString("dd/MM/yyyy", french);
                }
                @Html.DisplayFor(modelItem => d1)
            </td>
            <td>
                @{
                    var client = item.Clients.FirstOrDefault();
                }
                @Html.DisplayFor(m => client.nomC)
            </td>


            <td>


                <a class="open-homeEvents" href="#" data-toggle="modal" data-target="#exampleModal" data-id="@item.id">
                    <i class="fa fa-history fa-fw"></i>Détailles
                </a> |
                @Html.ActionLink("Supprimer", "Delete", new { id = item.id })
            </td>

        </tr>
    }

</table>


<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Détailles</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>


            <div class="modal-body">


                <div id="content"></div>
                <br />
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
            </div>

        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery.min.js"></script>




<script>


    $(document).ready(function () {

        $(document).on('click', ".open-homeEvents", function () {
            var idres = $(this).data('id');
            console.log(idres);
            $.ajax({
                url: "/Reservation/Detailres/" + idres,
                type: 'GET',
                dataType: 'json', // added data type
                success: function (data) {
                    console.log(data[0]);
                    data = data[0];
                    if (data.Clients[0] != null) {
                        var c1 = data.Clients[0].nomC;
                    } else { var c1 = "";}
                     if (data.Clients[1] != null) {
                       var c2 = data.Clients[1].nomC;
                    }else { var c2 = "";}
                     if (data.Clients[2] != null) {
                       var c3 = data.Clients[2].nomC;
                    }else { var c3 = "";}

                    var text = '<div class="sub-entry" >' +

                        ' <div class="control-group" > <label class="control-label ">Chambre numéro: </label> <div class="controls">' + data.chambre +
                        '</div> </div> <div class="control-group">' +
                        '<label class="control-label ">Type chambre: </label><div class="controls">' + data.type + '</div></div>' +


                        '<div class="control-group"><label class="control-label ">Montant:</label><div class="controls">' + data.montant + '</div></div>' +

                        '<div class="control-group"><label class="control-label ">Numéro de réçu:</label><div class="controls">' + data.bons + '</div></div>'+
                        '<div class="control-group"><label class="control-label ">Date d\'arrivée</label><div class="controls">'+ToJavaScriptDate(data.Arrivee)+'</div></div>'+

                            '<div class="control-group"><label class="control-label ">Dft</label><div class="controls">'+ToJavaScriptDate(data.dft)+'</div></div></div >'+


                      '<div class="sub-entry">'+


                         '<div class="control-group"><label class="control-label ">Agence </label><div class="controls">'+data.agence+'</div></div>'+


                         '<div class="control-group"><label class="control-label ">Nationnalité</label><div class="controls">'+data.nat+'</div> </div>'+

                         '<div class="control-group"><label class="control-label ">Nombre de personne</label><div class="controls">'+data.nombre+'</div></div>'+
           

                         '<div class="control-group"><label class="control-label ">Nom Client</label><div class="controls">'+c1+'</div></div>'+

                         '<div class="control-group"><label class="control-label ">Nom Client</label><div class="controls">'+c2+'</div></div>'+

                         '<div class="control-group"><label class="control-label ">Nom Client</label><div class="controls">'+c3+'<br /><br /></div></div>';
                    
                                        $('#content').html(text);
                    
                                    }
                                });
                            });
                    
                    
                        });


    function ToJavaScriptDate(value) {
  var pattern = /Date\(([^)]+)\)/;
  var results = pattern.exec(value);
  var dt = new Date(parseFloat(results[1]));
  return (dt.getMonth() + 1) + "/" + dt.getDate() + "/" + dt.getFullYear();
}
                    
                    
                    
</script>


