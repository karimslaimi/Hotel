@model IEnumerable<Hotel.Models.Reservation>

@{
    ViewBag.Title = "Reservations";
    Layout = "~/Views/Shared/templateEmp.cshtml";
}

@using System.Globalization;
@{
    CultureInfo french = new CultureInfo("fr-FR"); }



<h2 class="align-center">Réservations</h2>

<a href="@Url.Action("AddReservation","Employee")" class="btn btn-primary pull-right ">Nouvelle réservation</a>

<br />
<hr />
@using (Html.BeginForm("Reservations", "Employee", FormMethod.Post, new { @class = "form-horizontal row-fluid" }))
{<div class="span3 ">

        <input type="text" name="kw" class="controls span12" placeholder="Chercher...">
    </div>
    <div class="span3 align-center ">
        <b>De </b>           @Html.TextBox("d1", "", new { @type = "date", @class = "controls datepicker span8 " })

    </div>
    <div class="span3">
        <b> Jusqu'a</b>
        @Html.TextBox("d2", "", new { @type = "date", @class = "controls  datepicker span8 " })
    </div>

    <div class="span3  ">

        <button type="submit" class="pull-right btn btn-success">Chercher</button>
    </div>
}
<br />
<table class="datatable-1 table table-bordered table-striped  display dataTable ">
    <tr>
        <th>
            N° Chambre
        </th>
        <th>
            Agence
        </th>
        <th>
            Type
        </th>
        <th>
            Check-in
        </th>
        <th>
            Check-out
        </th>

        <th>Client</th>




        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.chambre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.agence)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.type)
            </td>
            <td>
                @{
                    var d = item.Arrivee.ToString("dd/MM/yyyy", french);
                }
                @Html.DisplayFor(modelItem => d)
            </td>
            <td>
                @{
                    var d1 = item.dft.ToString("dd/MM/yyyy", french);
                }
                @Html.DisplayFor(modelItem => d1)
            </td>
            <td>
                @{
                    var client = item.Clients.FirstOrDefault();
                }
                @Html.DisplayFor(m => client.nomC)
            </td>


            <td>

                @Html.ActionLink("Details", "Details", new { id = item.id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.id })
            </td>
        </tr>
    }

</table>
